{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "outDir": "bundles/",
    "paths": {
      "@tanbo/stream": [
        "src/public-api.ts"
      ],
      "@tanbo/*": [
        "src/*"
      ]
    }
  },
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
